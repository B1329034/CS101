#include <stdio.h>

int main()
{
   
 FILE *fp;
 int a[] = {0,1,2};
 char b[] = "ABC";
 float c[] = {1.1,1.2,1.3};
 
 fp = fopen("a.bin","wb");
 if (fp ==NULL){
     printf("File opening failed!\n");
     return 1;
 }
 fwrite(a, sizeof(int),3,fp);
 fwrite(b, sizeof(char),3,fp);
 fwrite(c, sizeof(float),3,fp);
 
 fclose(fp);
 printf("Data written successfully!\n");
    return 0;
}
